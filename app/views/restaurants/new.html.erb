<!-- Validation failure messages -->
<% if @restaurant.errors.any? %>
  <% @restaurant.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Restaurant</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_restaurant" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @restaurant.name %>">
      </div>

      <!-- Label and input for address -->
      <div class="form-group">
        <label for="address" class="control-label">
          Address
        </label>

        <input type="text" id="address" name="address" placeholder="Address" class="form-control" value="<%= @restaurant.address %>">
      </div>

      <!-- Label and input for city -->
      <div class="form-group">
        <label for="city" class="control-label">
          City
        </label>

        <input type="text" id="city" name="city" placeholder="City" class="form-control" value="<%= @restaurant.city %>">
      </div>

      <!-- Label and input for neighborhood -->
      <div class="form-group">
        <label for="neighborhood" class="control-label">
          Neighborhood
        </label>

        <input type="text" id="neighborhood" name="neighborhood" placeholder="Neighborhood" class="form-control" value="<%= @restaurant.neighborhood %>">
      </div>

      <!-- Label and input for short_description -->
      <div class="form-group">
        <label for="short_description" class="control-label">
          Short description
        </label>

        <textarea id="short_description" name="short_description" placeholder="Short description" class="form-control" rows="3"><%= @restaurant.short_description %></textarea>
      </div>

      <!-- Label and input for hours -->
      <div class="form-group">
        <label for="hours" class="control-label">
          Hours
        </label>

        <input type="text" id="hours" name="hours" placeholder="Hours" class="form-control" value="<%= @restaurant.hours %>">
      </div>

      <!-- Label and input for website -->
      <div class="form-group">
        <label for="website" class="control-label">
          Website
        </label>

        <input type="text" id="website" name="website" placeholder="Website" class="form-control" value="<%= @restaurant.website %>">
      </div>

      <!-- Label and input for total_ratings -->
      <div class="form-group">
        <label for="total_ratings" class="control-label">
          Total ratings
        </label>

        <input type="text" id="total_ratings" name="total_ratings" placeholder="Total ratings" class="form-control" value="<%= @restaurant.total_ratings %>">
      </div>

      <!-- Label and input for num_reviews -->
      <div class="form-group">
        <label for="num_reviews" class="control-label">
          Num reviews
        </label>

        <input type="text" id="num_reviews" name="num_reviews" placeholder="Num reviews" class="form-control" value="<%= @restaurant.num_reviews %>">
      </div>

      <button class="btn btn-success">
        Create Restaurant
      </button>
      or
      <a href="/restaurants">Cancel</a>
    </form>
  </div>
</div>
