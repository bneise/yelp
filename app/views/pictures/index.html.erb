<div class="page-header">
  <h1>
    Pictures
    <a href="/pictures/new" class="btn btn-lg btn-success">New Picture</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Caption</th>
        <th>Image url</th>
        <th>Review</th>
        <th>Actions</th>
      </tr>

      <% @pictures.each do |picture| %>
      <tr>
        <td><%= picture.caption %></td>
        <td><img src='<%= picture.image_url %>' class='img-responsive'></td>
        <td><%= picture.review.user_id %></td>
        <td>
          <a href="/pictures/<%= picture.id %>" class="btn btn-primary">Show</a>
          <a href="/pictures/<%= picture.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_picture/<%= picture.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
